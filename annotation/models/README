        		db_version.txt.gz
        		dead_clan.txt.gz
        		dead_family.txt.gz
        		family.txt.gz
        		family_literature_reference.txt.gz
        		family_ncbi.txt.gz
        		features.txt.gz
        		full_region.txt.gz
			genome.txt.gz
			genseq.txt.gz
        		html_alignment.txt.gz
